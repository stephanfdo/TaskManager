@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-0 shadow text-center">
                <div class="card-body p-5">
                    <i class="bi bi-exclamation-triangle-fill text-danger display-1 mb-4"></i>
                    <h1 class="display-4">Oops!</h1>
                    <h2 class="mb-4">An error occurred while processing your request.</h2>

                    @if (Model.ShowRequestId)
                    {
                        <p class="text-muted">
                            <strong>Request ID:</strong> <code>@Model.RequestId</code>
                        </p>
                    }

                    <hr class="my-4">

                    <div class="text-start mb-4">
                        <h5>What you can do:</h5>
                        <ul>
                            <li>Refresh the page or try again later</li>
                            <li>Check your internet connection</li>
                            <li>Return to the <a asp-controller="Home" asp-action="Index">homepage</a></li>
                        </ul>
                    </div>

                    <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg">
                        <i class="bi bi-house-door"></i> Go to Homepage
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>