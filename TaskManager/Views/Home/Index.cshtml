@{
    ViewData["Title"] = "Welcome";
}

<div class="container">
    <div class="row align-items-center g-5 py-5">
        <div class="col-lg-6">
            <h1 class="display-4 fw-bold lh-1 mb-3">Manage Your Tasks Efficiently</h1>
            <p class="lead">
                The Task Manager helps you stay organized and productive. 
                Keep track of all your tasks in one place and never miss a deadline again.
            </p>
            <div class="d-grid gap-2 d-md-flex justify-content-md-start mt-4">
                <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-primary btn-lg px-4 me-md-2">
                    <i class="bi bi-person-plus"></i> Sign Up Free
                </a>
                <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-outline-secondary btn-lg px-4">
                    <i class="bi bi-box-arrow-in-right"></i> Log In
                </a>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="card border-0 shadow">
                <div class="card-body p-4">
                    <h3 class="card-title mb-4">Key Features</h3>
                    <div class="d-flex mb-3">
                        <div class="feature-icon bg-primary bg-gradient text-white rounded-3 me-3 p-3">
                            <i class="bi bi-card-checklist fs-4"></i>
                        </div>
                        <div>
                            <h5>Organize Tasks</h5>
                            <p class="mb-0">Create, manage, and organize all your tasks in one place.</p>
                        </div>
                    </div>
                    <div class="d-flex mb-3">
                        <div class="feature-icon bg-primary bg-gradient text-white rounded-3 me-3 p-3">
                            <i class="bi bi-calendar-date fs-4"></i>
                        </div>
                        <div>
                            <h5>Due Dates</h5>
                            <p class="mb-0">Set due dates to prioritize your tasks and meet deadlines.</p>
                        </div>
                    </div>
                    <div class="d-flex mb-3">
                        <div class="feature-icon bg-primary bg-gradient text-white rounded-3 me-3 p-3">
                            <i class="bi bi-shield-check fs-4"></i>
                        </div>
                        <div>
                            <h5>Secure & Private</h5>
                            <p class="mb-0">Your tasks are private and secure with user authentication.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .feature-icon {
        width: 50px;
        height: 50px;
        display: flex;
        align-items: center;
        justify-content: center;
    }
</style>