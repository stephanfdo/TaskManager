@model TaskManager.Models.UserTask

@{
    ViewData["Title"] = "Delete Task";
}

<div class="container">
    <div class="row mb-4">
        <div class="col">
            <h1 class="display-4">Delete Task</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card border-danger shadow-sm">
                <div class="card-header bg-danger text-white">
                    <h5 class="card-title mb-0">Are you sure you want to delete this task?</h5>
                </div>
                <div class="card-body">
                    <h6 class="card-subtitle mb-3 fw-bold">@Model.Title</h6>

                    <h6 class="card-subtitle mb-2 text-muted">Description</h6>
                    <p class="card-text mb-4">
                        @if (string.IsNullOrEmpty(Model.Description))
                        {
                            <em>No description provided</em>
                        }
                        else
                        {
                            @Model.Description
                        }
                    </p>

                    <div class="row">
                        <div class="col-md-6">
                            <h6 class="card-subtitle mb-2 text-muted">Created Date</h6>
                            <p>@Model.CreatedDate.ToString("MMMM d, yyyy")</p>
                        </div>
                        <div class="col-md-6">
                            <h6 class="card-subtitle mb-2 text-muted">Due Date</h6>
                            <p>
                                @if (Model.DueDate.HasValue)
                                {
                                    @Model.DueDate.Value.ToString("MMMM d, yyyy")
                                }
                                else
                                {
                                    <em>Not specified</em>
                                }
                            </p>
                        </div>
                    </div>

                    <div class="alert alert-warning mt-3" role="alert">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        This action cannot be undone.
                    </div>

                    <form asp-action="Delete" class="mt-4">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>